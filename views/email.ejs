	            	<div class="row">
					
						<div class="col-lg-6 col-md-7 col-sm-9">
				
						  <h4 style="border-bottom: 1px solid #c5c5c5;">
						    Email Your Doctor
						  </h4>
		  		
				  		</div>
			  	
					</div>
					
					<div class="row">
					  
					  <div class="col-lg-6 col-md-7 col-sm-9">
					  
					  <form role="form">
					  
					      <div class="form-group">
					        <label for="InputEmail">To Email</label>
					        <div class="input-group">
					          <input type="email" class="form-control" id="InputEmail" name="InputEmail" placeholder="Enter Receiver's Email Id" ng-model="toEmail" required  >
					          <span class="input-group-addon"><i class="fa fa-fw fa-envelope"></i></span></div>
					      </div>
					      
					      <div class="form-group">
					        <label for="InputMessage">Subject</label>
					        <div class="input-group">
					          <input type="text" class="form-control" id="InputEmail" name="InputEmail" placeholder="Enter Email Subject" ng-model="subject" required  >
					          <span class="input-group-addon"><i class="fa fa-fw fa-edit"></i></span></div>
					      </div>
					      
					      
					      <div class="form-group">
					        <label for="InputMessage">Message Body</label>
					        <div class="input-group">
					          <textarea name="InputMessage" id="InputMessage" class="form-control" rows="5" placeholder="Enter Your Message" ng-model="message" required></textarea>
					          <span class="input-group-addon"><i class="fa fa-fw fa-edit"></i></span></div>
					      </div>
					      				      
					      <button class="btn btn-success btn-block btn btn-info pull-right" ng-click="sendEmail()">Send</button>
					      
					      <br>
					      <div class="alert alert-success" ng-show="emailStatus"><strong>Success! Message sent.</strong></div>
					      
					      <br><br><br><br><br><br><br><br><br><br>
					      
