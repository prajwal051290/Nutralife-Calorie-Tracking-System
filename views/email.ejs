    <script>
  
  	<!-- Controller Graph -->
  	
  	var email = angular.module('emailAngular', []);
	email.controller('emailController', homeOperations); 
			
	function homeOperations($scope, $http) {
	
	$scope.emailStatus = false;
	
	$http.get("/userProfile")
  			.success(function(data) {
  				console.log("Success returned from USERPROFILE function");
  				$scope.profile = data[0].first_name + " " + data[0].last_name;
  			})
  			
  			
  	$scope.sendEmail = function(){
  			
  			var emailInfo = {};
  			
  			emailInfo = {"to": $scope.toEmail, "subject": $scope.subject, "message": $scope.message};
  			
  			$http.post("/sendEmail", emailInfo)
				.success(function(data) {
					console.log("Success returned from sendEmail function");
					$scope.emailStatus=true;
			})
				
   		}		
  			
  			
	}
	
	</script>
	
	
