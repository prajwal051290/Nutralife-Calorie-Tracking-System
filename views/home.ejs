	<script>
  
  	<!-- Controller Home -->
  	
  	var home = angular.module('homeAngular', []);
	home.controller('homeController', homeOperations); 
			
	function homeOperations($scope, $http) {
  		
  		$http.get("/userProfile")
  			.success(function(data) {
  				console.log("Success returned from USERPROFILE function");
  				$scope.profile = data[0].first_name + " " + data[0].last_name 
  				
  				
			$http.get("/getGoalCalories")
			.success(function(data) {
			
				console.log("Success returned from GETGOALCALORIES function");
				$scope.goal = data[0].target_calorie;
				
				if (data[0].goal_weight > data[0].current_weight){
				
					$scope.weight = data[0].goal_weight - data[0].current_weight;
					$scope.weightType = "Gain Weight (kg)";  
					$scope.weightDescription = "With Above Calorie Goal, You Should Be Gaining " + $scope.weight.toString() +
											   " kg in " + data[0].goal_days.toString() + " days";
				
				}else{
				
					$scope.weight = data[0].current_weight - data[0].goal_weight;
					$scope.weightType = "Lose Weight (kg)";
					$scope.weightDescription = "With Above Calorie Goal, You Should Be Losing " + $scope.weight.toString() +
											   " kg in " + data[0].goal_days.toString() + " days";
				
				}
				
				$http.get("/getTodayCalories")
				.success(function(data) {
					console.log("Success returned from GETTODAYCALORIES function");
					$scope.consumed = data.consumed;
					$scope.burned = data.burned;
					$scope.net = data.net;
				})
				
			})
  				
  		})
  		
  	}
  		
